source 'https://rubygems.org'

# AWS SDK（S3/CloudFront）
gem 'aws-sdk-s3', '~> 1.90'          # S3 クライアント／ダウンロード用
gem 'aws-sdk-cloudfront', '~> 1.57'  # CloudFront 用（ログ取得はS3経由）

# CLI フレームワーク
gem 'thor', '~> 1.2'

# ロギング
gem 'logger'

# 環境変数管理
gem 'dotenv', '~> 2.7'

# 圧縮／CSV 処理
# （標準ライブラリで足りるため省略可）

group :development, :test do
  gem 'rspec', '~> 3.10'             # テストフレームワーク
end
